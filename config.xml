<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WorkItOUt</name>
    <description>
        A dynamic app for creating workouts and tracking health and fitness. The app also includes a water counter and a calorie counter. You can create workouts and add your own images,  create calorie items and water containers for easy addition. It also includes a profile you can add images to. 
    </description>
    <author email="johnbldwrth92@gmail.com" href="http://jonbloodworth.info">
        WorkItOut Dev Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:6787800300*" />
    <allow-intent href="mailto:johnbldwrth92@gmail.com*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
